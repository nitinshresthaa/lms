<h1 class="text-center">Listing all books</h1>
<div class="container">
<table class="table table-striped table-hover">
  <thead>
    <tr>
    <% name= current_user.present? ? current_user.email : 'Stranger' %>
      <th>Title</th>
      <th>Description</th>
      <th>Creation</th>
      <% if user_signed_in? && current_user.librarian? %>
      <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= truncate(book.description, length: 100, escape: false) %></td>
      <% if user_signed_in? && current_user.librarian? %>
      <td>
        <%= link_to "Edit", edit_book_path(book), class: "btn btn-xs btn-primary" %>
        <%= link_to 'Show', book_path(book), class:"btn btn-xs btn-warning" %>
        <%= link_to "Delete", book_path(book), method: :delete, data: { confirm: "Are you sure you want to delete this book?"}, class: "btn btn-xs btn-danger" %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
</div>